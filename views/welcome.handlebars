        <div class="card-header"><img class="header-image mb-3" src="./img/passman.svg" alt="">


            <form action="/login" method="POST">
                <div class="form-group" action="/login" method="POST">
                    <label for="userNameLogin" class="font-weight-bold">E - <i class="fas fa-mars" id="mars-symbol"></i></label>
                    <input type="email" class="form-control transparent-input" id="userName" name="loginusername">
                </div>
                <div class="form-group">
                    <label for="passwordLogin" class="font-weight-bold">Password</label>
                    <input type="password" class="form-control transparent-input" id="password" name="loginpassword">
                </div>
                <a href="" data-toggle="modal" data-target="#registerModal" class="font-weight-bold float-left ">Register
